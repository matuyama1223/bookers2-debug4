<div class="container">
<div class="row">
	<div class="col-xs-3">
	<%= form_with url:books_path,method: :get,data: {remote: false} do %>
    <%= text_field_tag :search %>
    <%= submit_tag "検索", :title => nil %>
    <%end%>

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>
		<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Books index</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
				<!--  -->
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= link_to(book.user) do %>
						<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
					<td><%= book.body %></td>
					<td>
						<!--自分（ログインしているユーザ）が含まれているかをfavorited_by?メソッドで判定しています-->
					<td id="book_<%= book.id %>">
						<%= render 'favorite', book: book %></td>
					</div>
					<td> <a href="#comments">コメント数<%= book.book_comments.count %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<!--books一覧 -->


	</div>
</div>
</div>